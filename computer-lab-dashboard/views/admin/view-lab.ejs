<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= lab.labName %> Details</title>
  <link href="/css/tailwind.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <div class="flex h-screen">
    <!-- Sidebar -->
    <aside class="w-1/4 bg-gray-800 text-white p-6">
      <h2 class="text-2xl font-bold mb-6">Admin Dashboard</h2>
      <ul class="space-y-4">
        <li><a href="/admin/add-student" class="hover:text-blue-400">Add Student</a></li>
        <li><a href="/admin/create-lab" class="hover:text-blue-400">Create Lab</a></li>
        <li><a href="/admin/show-labs" class="hover:text-blue-400">Show Lab</a></li>
        <li><a href="/admin/view-logs" class="hover:text-blue-400">View Logs</a></li>
        <li><a href="/admin/view-students" class="hover:text-blue-400">View Students</a></li>
      </ul>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-6">
      <h1 class="text-3xl font-bold mb-6"><%= lab.labName %> Details</h1>
      <div class="bg-white p-6 rounded-lg shadow-md mb-6">
        <p><strong>Lab Name:</strong> <%= lab.labName %></p>
        <p><strong>Lab ID:</strong> <%= lab.labId %></p>
        <p><strong>Capacity:</strong> <%= lab.capacity %></p>
      </div>

      <!-- Manage Requirements Button -->
      <div class="mt-4 mb-6">
        <a 
          href="/admin/manage-requirements/<%= lab.labId %>" 
          class="bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition duration-200"
        >
          Manage Requirements
        </a>
      </div>

      <!-- PCs Section -->
      <% if (pcs.length > 0) { %>
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h2 class="text-2xl font-bold mb-4">PCs in <%= lab.labName %></h2>
          <ul class="space-y-4">
            <% pcs.forEach(pc => { %>
              <li class="border-b pb-2">
                <p><strong>PC Name:</strong> <%= pc.pcName %></p>
                <p><strong>Lab ID:</strong> <%= pc.labId %></p>
              </li>
            <% }) %>
          </ul>
        </div>
      <% } else { %>
        <div class="bg-white p-6 rounded-lg shadow-md">
          <p>No PCs found for this lab.</p>
        </div>
      <% } %>
    </main>
  </div>
</body>

</html>
